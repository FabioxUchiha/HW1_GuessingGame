<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NumberGuessActivity">
    <Button
            android:text="INICIAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnIniciar"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ingresaNumero" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txtIntentos" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp" app:layout_constraintVertical_bias="0.0"
            android:onClick="iniciarClick"/>
    <Button
            android:text="JUGAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnJugar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="64dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/ingresaNumero"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/txtIntentos"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnIniciar" app:layout_constraintHorizontal_bias="0.01"
            android:onClick="jugarClick"/>
    <TextView
            android:text="JUEGO DE ADIVINAR EL NUMERO"
            android:layout_width="214dp"
            android:layout_height="26dp"
            android:id="@+id/textView3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.104"
            app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="Intentos: 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtIntentos" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="282dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/ingresaNumero" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txtIntentos" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.039"/>
    <TextView
            android:text="INGRESE UN NUMERO ENTRE 1 Y 1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ingresaNumero" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txtIntentos" app:layout_constraintVertical_bias="0.142"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMensaje" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txtIntentos" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintVertical_bias="0.045"/>
</androidx.constraintlayout.widget.ConstraintLayout>